{
    "name":"contao-bootstrap/form",
    "description":"Navigation templates supporting bootstrap dropdown navigation",
    "keywords":["bootstrap", "form", "contao"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "support":{
        "email":"mail@netzmacht.de",
        "issues":"https://github.com/contao-bootstrap/form/issues",
        "wiki":"http://contao-bootstrap.netzmacht.de",
        "source":"https://github.com/contao-bootstrap/form"
    },
    "conflict": {
        "netzmacht/contao-bootstrap": "*"
    },
    "require":{
        "php":">=5.3.4",
        "contao-community-alliance/composer-plugin": "~2.0",
        "contao/core":">=3.2,<3.6-dev",
        "contao-bootstrap/core": "~1.0",
        "netzmacht/contao-iconwizard": "~1.0",
        "netzmacht/html": "~1.0",
        "netzmacht/contao-form-helper": "~1.0",
        "contao-community-alliance/meta-palettes":"~1.4",
        "bootstrap-select/bootstrap-select": "~1.7"
    },
    "require-dev": {
        "netzmacht/contao-build-tools": "~1.1"
    },
    "autoload": {
        "psr-0": { "Netzmacht\\Bootstrap\\Form": "src/" }
    },
    "extra":{
        "contao": {
            "sources":{
                "module": "system/modules/bootstrap-form"
            },
            "transifex": {
                "project": "contao-bootstrap",
                "prefix": "form-",
                "languages_cto": "module/languages",
                "languages_tx": ".tx"
            }
        },
        "branch-alias": {
            "dev-master": "1.1.x-dev",
            "dev-develop": "1.2.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
